{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "House prices in China",
      "subtitle": "Nominal house price indices. Source: OECD Statistics",
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "middle",
      "color": "black",
      "subtitleColor": "black"
    },
    "width": 500,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/zoerontree/zoerontree.github.io/main/Chinahouseprices.csv"
    },
    "mark": {"type": "line", "color": "purple", "strokeWidth": 2, "opacity": 1},
    "transform": [
        {"calculate": "timeParse(datum.Time, '%Y/%m')", "as": "date"},
        {"calculate": "year(datum.Time)", "as": "year"},
      {"filter": "datum.year>=minYear"},
      {"filter": "datum.year<=maxYear"}
    ],
    "params": [
      {
        "name": "minYear",
        "value": 2015,
        "bind": {
          "input": "range",
          "min": 2015,
          "max": 2022,
          "step": 1,
          "name": "Start year:"
        }
      },
      {
        "name": "maxYear",
        "value": 2022,
        "bind": {
          "input": "range",
          "min": 2015,
          "max": 2022,
          "step": 1,
          "name": "End year:"
        }
      }
    ],
    "encoding": {
      "x": {"field": "date", "type": "temporal", "title": null},
      "y": {"field": "Value", "type": "quantitative", "title": "Index (2015=100)"}
    }
  }